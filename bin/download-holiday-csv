#!/usr/bin/env php
<?php

$extra = json_decode(file_get_contents(__DIR__ . '/../composer.json'), true)['extra'];

if (isset($extra['csv-file']['url'])) {
    $url = $extra['csv-file']['url'];
    $csvData = file_get_contents($url);

    $dir = __DIR__ . '/../csv/';
    if (!file_exists($dir) && mkdir($dir, 0777, true)) {
        file_put_contents($dir . 'syukujitsu.csv', $csvData);
    }
}
